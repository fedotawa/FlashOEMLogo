<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="l2.albitron.huaweiflash"
    android:versionCode="1"
    android:versionName="0.1" >

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".FlashActivity"
            android:label="@string/flash_image"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".ChooseActionActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ColorSettingsActivity"
            android:label="@string/title_activity_color_settings"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".SupportedHardware"
            android:label="@string/title_activity_supported_hardware" >
        </activity>
    </application>

</manifest>
